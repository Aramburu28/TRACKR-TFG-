<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Points.ApiPage"
             Title="ApiPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome fellow animal lover"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image x:Name="Cat"
               HeightRequest="250"
               WidthRequest="250"
               />
        <Button x:Name="press"
                Text="Get new Images"
                Clicked="press_Clicked"/>
        <Image x:Name="Cat2"
                HeightRequest="250"
 WidthRequest="250"
         />
    </VerticalStackLayout>
</ContentPage>